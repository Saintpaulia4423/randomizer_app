<% content_for :title, "ユーザー登録" %>
<%= turbo_frame_tag "user", class: "p-0" do %>

  <div class="p-0 m-0 max-height container">
    <div class="row gx-0 align-items-center w-100 h-100 trump-img background-fix opacity-50"></div>
    <div class="d-flex justify-content-center align-items-center h-100">
      <div class="card w-50">
        <div class="card-header">
          <span class="bi bi-person-fill-add">ユーザー登録</span>
        </div>
        <div class="card-body">
            <%= form_with(model: @user) do |form| %>
              <%= render "form_flash", object: form.object %>
              <div class="input-group mb-3">
                <%= form.label :user_id, class: "input-group-text", id: "random_set_name" %>
                <%= form.text_field :user_id, class: "form-control", placeholder: "3文字～255文字まで", aria: { describedby: "random_set_name" }, required: true %>
              </div>

              <div class="input-group mb-3">
                <%= form.label :password, class: "input-group-text", id: "random_set_password" %>
                <%= form.password_field :password, class: "form-control", placeholder: "パスワード", aria: { describedby: "random_set_password" }, required: true  %>
              </div>

              <div>
                <%= form.submit "作成", class: "btn btn-primary p-3" %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
