<%= turbo_frame_tag "preview_modal" do %>
  <div class="modal fade" data-controller="preview_modal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">カードセット：<%= title %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="preview_modal" arie-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
<% end %>
