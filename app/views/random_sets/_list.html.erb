<%# listにターゲット情報を入れる。 %>
<%= turbo_frame_tag :target_list do %>
  <div class="card">
    <div class="card-header">
      <div class="row">
        <div class="col d-flex align-items-center">
          <i class="bi <%= list_icon %>"><span data-controller="tooltip" data-tooltip="<%= tooltip_message %>"><%= list_name %></span></i>
        </div>
        <div class="col d-flex justify-content-end">
          <button class="btn btn-primary btn-small" data-action="info#<%= "add" + list.to_s.capitalize + "Modal" %>">追加</button>
        </div>
      </div>
    </div>
    <div class="card-body" data-info-target="<%= list.to_s + "List" %>">
      <% target_list.each do |item| %>
        <div class="input-group">
          <span class="input-group-text" data-info-target="<%= "selected" + list.to_s.capitalize %>" data-value=<%= item["reality"] %>><%= get_realityname(item["reality"]) %></span>
          <input type="number" class="form-control" value=<%= item["value"] %> name="<%= list.to_s + "-" + item["reality"].to_s %>" data-randomizer-target="<%= list.to_s + "Rate" %>" data-reality=<%= item["reality"] %>>
          <span class="input-group-text"><%= quantity %></span>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
