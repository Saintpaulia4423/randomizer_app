<%# タイトル %>
<% content_for :title, "セット一覧・検索" %>

<%# 見出し %>
<h2 class="fw-bold">
  <span>セット一覧</span>
</h2>

<%# 検索フォーム %>
<div class="card mt-3">
  <div class="card-header">
    <i class="bi bi-search">検索条件</i>
  </div>

  <div class="card-body">
    <%= search_form_for(
      @search,
      html: {
        data: {
          turbo_frame: "random-set-list",
          controller: "form",
          action: "input->form#submit"
        }
      }) do |f| %>
      <div class="row mb-3">
        <div class="col-6">
          <%= f.label :name_cont, "名前", class: "form-label" %>
          <%= f.search_field :name_cont, class: "form-control" %>
        </div>
        <div class="col-6 d-flex align-items-end">
          <%= link_to "リセット", random_sets_path, class: "btn btn-outline-secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%# 一覧 %>
<div class="card mt-3">
  <div class="card-header">
    <i class="bi bi-table">一覧</i>
  </div>

  <%# 最上位行 %>
  <div class="card-body mx-3">
    <%= turbo_frame_tag "random-set-list", data: { turbo_action: :advance } do %>
      <div class="row py-2">
        <div class="col-4 mt-auto">
          <%= sort_link(@search, :name) %>
        </div>
        <div class="col-4 mt-auto">
          <%# 仮置き %>
        </div>
        <div class="col-4 d-flex justify-content-end">
          <%= link_to new_random_set_path,
            class: "btn btn-outline-primary",
            data: { turbo_frame: "modal" } do
          %>
            <i class="bi bi-dice-6-fill">登録</i>
          <% end %>
        </div>
      </div>
      
      <%# 本体部 %>
      <div id="random-sets">
        <%= render @random_sets %>
      </div>
    <% end %>
  </div>
</div>
