<%# 最上位行 %>
<%= turbo_frame_tag "random_set_lotteries" do %>
  <% if @lotteries.empty? %>
    <p>登録がありません</p>
  <% else %>
    <table id="lotteriesTable" class="table table-hover table-striped table-sm" data-controller="table-sort">
      <thead>
        <tr>
          <th class="sortable" data-sort="checkbox" data-action="click->table-sort#checkboxSort" data-table-sort-target="tableHeader" data-controller="tooltip" data-tooltip="チェックが入っているものだけを引くこともできます。">
            <input class="form-check-input" type="checkbox" data-table-sort-target="checkboxHeader" checked>
          </th>
          <th class="sortable" data-sort="pickup" data-action="click->table-sort#sort" data-table-sort-target="tableHeader" data-controller="tooltip" data-tooltip="ピックアップの設定です。ダブルクリックで切り替えることが行えます。">
            <span class="bi bi-stars"></span>
          </th>
          <% if defined?(@random_set) != nil && params[:action] == "show" %>
            <th class="sortable" data-sort="pickup" data-action="click->table-sort#sort" data-table-sort-target="tableHeader" data-controller="tooltip" data-tooltip="指定引の設定です。ダブルクリックで切り替えることができます。">
              <span class="bi bi-hand-index-fill"></span>
            </th>
          <% end %>
          <th class="sortable" data-sort="number" data-action="click->table-sort#sort" data-table-sort-target="tableHeader">レアリティ</th>
          <th class="sortable" data-sort="string" data-action="click->table-sort#sort" data-table-sort-target="tableHeader">名前</th>   
          <% if defined?(@random_set) != nil %>
            <th class="sortable" data-sort="string" data-action="click->table-sort#sort" data-table-sort-target="tableHeader">個数</th>
          <% end %>
          <th class="sortable" data-sort="string" data-action="click->table-sort#sort" data-table-sort-target="tableHeader">内容</th>     
        </tr>
      </thead>
      <tbody class="table-group-divider">
        <%= render @lotteries %>
      </tbody>
    </table>
  <% end %>
<% end %>
